<h1> Give a Student a Duck! </h1>
<hr>

<%if flash[:message]%>
    <%flash[:message].each do |error|%>
        <%= error%>
    <% end %>
<% end %>

<%= form_for @duck do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <%= f.label :student%>
    <%= f.collection_select :student_id, Student.all, :id, :name%>
    <br>
    <%= f.submit %>
    
  
<% end %>
